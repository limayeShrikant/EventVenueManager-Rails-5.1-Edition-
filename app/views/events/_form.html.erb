<%= form_with(model: event, local: true) do |form| %>
<% if event.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

    <ul>
        <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
</div>

<div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description %>
</div>

<div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, id: :event_start_time %>
</div>

<div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, id: :event_end_time %>
</div>

<div class="field">
    <%= form.label :venue_id %>
    <%= form.collection_select :venue_id, Venue.all, :id, :name, {prompt: "Select Venue"}, id: :event_venue_id %>
</div>

<div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :name, {prompt: "Select Client"}, id: :event_user_id %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>